<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditPdfActivity">

    <!-- Top Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        app:title="PDF Editor"
        app:navigationIcon="@drawable/ic_back" />

    <!-- Editing Tools Strip -->
    <LinearLayout
        android:id="@+id/toolsStrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@color/surface_variant"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="6">

        <ImageButton
            android:id="@+id/btnHand"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_hand"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/primary" />

        <ImageButton
            android:id="@+id/btnText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_text"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/primary" />

        <ImageButton
            android:id="@+id/btnDraw"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_create"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/primary" />

        <ImageButton
            android:id="@+id/btnHighlight"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_highlight"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/primary" />

        <ImageButton
            android:id="@+id/btnEraser"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_erase"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/primary" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_save"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/primary" />

    </LinearLayout>

    <!-- Text Options Panel -->
    <LinearLayout
        android:id="@+id/textOptionsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolsStrip"
        android:background="@color/surface"
        android:padding="5dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Font Family -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font"
                android:textSize="12sp"
                android:textColor="@color/primary" />

            <Spinner
                android:id="@+id/fontSpinner"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Text Size -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textSize="12sp"
                android:textColor="@color/primary"/>

            <Spinner
                android:id="@+id/textSizeSpinner"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Color Picker -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="12sp"
                android:textColor="@color/primary" />

            <Spinner
                android:id="@+id/colorSpinner"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Text Style -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Style"
                android:textSize="12sp"
                android:textColor="@color/primary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">

                <!-- Bold Toggle -->
                <TextView
                    android:id="@+id/btnBold"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="B"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="4dp" />

                <!-- Italic Toggle -->
                <TextView
                    android:id="@+id/btnItalic"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="I"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="4dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Draw Options Panel -->
    <LinearLayout
        android:id="@+id/drawOptionsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textOptionsPanel"
        android:background="@color/surface"
        android:padding="8dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Color Picker Circle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:layout_marginBottom="4dp" />

            <View
                android:id="@+id/colorCircle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/color_circle_selector" />
        </LinearLayout>

        <!-- Pen Size SeekBar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/penSizeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="20"
                android:progress="5"
                android:min="1" />
        </LinearLayout>

        <!-- Undo Button with Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/undoLayout">

            <TextView
                android:id="@+id/btnUndo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undo"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Redo Button with Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/redoLayout">

            <TextView
                android:id="@+id/btnRedo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redo"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:padding="8dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Highlight Options Panel -->
    <LinearLayout
        android:id="@+id/highlightOptionsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolsStrip"
        android:background="@color/surface"
        android:padding="8dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Highlight Color Picker Circle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:layout_marginBottom="4dp" />

            <View
                android:id="@+id/highlightColorCircle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/color_circle_selector" />
        </LinearLayout>

        <!-- Highlight Size SeekBar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/highlightSizeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="30"
                android:progress="15"
                android:min="5" />
        </LinearLayout>

        <!-- Highlight Undo Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/highlightUndoLayout">

            <TextView
                android:id="@+id/btnHighlightUndo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undo"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Highlight Redo Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/highlightRedoLayout">

            <TextView
                android:id="@+id/btnHighlightRedo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redo"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:padding="8dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Eraser Options Panel -->
    <LinearLayout
        android:id="@+id/eraserOptionsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolsStrip"
        android:background="@color/surface"
        android:padding="8dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Eraser Size SeekBar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eraser Size"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/eraserSizeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="40"
                android:progress="20"
                android:min="10" />
        </LinearLayout>

        <!-- Eraser Undo Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/eraserUndoLayout">

            <TextView
                android:id="@+id/btnEraserUndo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undo"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Eraser Redo Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/eraserRedoLayout">

            <TextView
                android:id="@+id/btnEraserRedo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redo"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:padding="8dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- PDF Pages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pdfRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/drawOptionsPanel"
        android:background="@color/white" />

    <!-- Text Input Dialog -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/textInputCard"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Type your text here" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btnConfirmText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Add Text" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>